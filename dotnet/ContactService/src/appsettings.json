{
  "AllowedHosts": "*",
  "Hirameku": {
    "Email": {
      "EmailerOptions:FeedbackEmailAddress": "feedback@hirameku.app"
    },
    "Recaptcha": {
      "RecaptchaOptions": {
        "MaxRetries": 5,
        "MinimumScore:": 0.5,
        "VerificationUrl": "https://www.google.com/recaptcha/api/siteverify"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
